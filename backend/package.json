{
  "name": "tic-tac-toe-multiplayer-backend",
  "version": "1.0.0",
  "description": "Real-time multiplayer tic-tac-toe game backend with Socket.IO",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "logs:tail": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:game": "tail -f logs/game-events.log",
    "logs:clean": "rm -rf logs/*.log",
    "health": "curl http://localhost:3000/health",
    "metrics": "curl http://localhost:3000/metrics",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\""
  },
  "keywords": [
    "tic-tac-toe",
    "multiplayer",
    "websocket",
    "socket.io",
    "nodejs",
    "express",
    "real-time",
    "game"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "socket.io-client": "^4.7.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**",
      "!*.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
