# Server Configuration
PORT=3000
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
SOCKET_EVENTS_PER_MINUTE=999999
CREATE_ROOM_PER_HOUR=999999
JOIN_ROOM_PER_MINUTE=999999

# Game Configuration
TURN_TIMEOUT=30000
GAME_TIMEOUT=300000
RECONNECT_TIMEOUT=60000

# Monitoring Thresholds
MEMORY_THRESHOLD_MB=500
ERROR_RATE_THRESHOLD_PERCENT=5
RESPONSE_TIME_THRESHOLD_MS=1000
CONNECTION_LIMIT=1000
REQUESTS_PER_MINUTE=1000

# Security
TRUST_PROXY=false

# External Services (for future use)
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=mongodb://localhost:27017/tictactoe
# WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Production Security (only for production)
# SSL_KEY_PATH=/path/to/ssl/private.key
# SSL_CERT_PATH=/path/to/ssl/certificate.crt